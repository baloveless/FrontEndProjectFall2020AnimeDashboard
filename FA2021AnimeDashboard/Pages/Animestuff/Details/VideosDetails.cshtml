@page "{Anime}/{AnimeId:int}"
@model FA2021AnimeDashboard.Pages.Animestuff.Details.VideosDetailsModel
@{
}
<div class="container text-center bg-secondary w-50">
    <a class="text-light" asp-page="/Animestuff/AnimeDetails" asp-route-Anime="@Model.Anime">Go back to details</a>
    <h5 class="text-light">@Model.Anime</h5>
    <div>
        <button class="btn btn-primary" onclick="togglePromo();">Promo Videos</button>
        <button class="btn btn-dark" onclick="toggleEpisode();">Episodes</button>
    </div>
    <div class="container py-2" id="promo">
        @foreach(promo video in Model.response.promo)
            {
               <div class="card bg-light pb-2">
                   <div class="card-header">
                       <iframe width="420" height="315" src="@video.video_url"></iframe>
                       <h4 class="card-title">@video.title</h4>
                   </div>
               </div> 
            }
    </div>
    <div class="container" id="episode" hidden="hidden">
        @foreach (videoEpisode video in Model.response.episodes)
        {
            <div class="card bg-light pb-2">
                <div class="card-header">
                    <img class="card-img" src="@video.image_url" />
                    <h4 class="card-title mt-2">@video.title</h4>
                </div>
                <div class="card-body">
                    <button class="btn btn-primary" onclick="window.open('@video.url');">Check out the episode on MyAnimeList!</button>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function togglePromo() {
        document.getElementById("promo").hidden = false;
        document.getElementById("episode").hidden = true;
    }

    function toggleEpisode() {
        document.getElementById("episode").hidden = false;
        document.getElementById("promo").hidden = true;
    }
</script>
