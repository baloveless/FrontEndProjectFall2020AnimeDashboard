@page "{Anime}/{AnimeId:int}"
@model FA2021AnimeDashboard.Pages.Animestuff.Details.PicturesDetailsModel
@{
    var first = "active";
}
<div class="container text-center bg-secondary w-50">
    <a class="text-light" asp-page="/Animestuff/AnimeDetails" asp-route-Anime="@Model.Anime">Go back to details</a>
    @if (Model.response.pictures == null || Model.response.pictures.Count == 0)
    {
        <p>No pictures were found for @Model.Anime.</p>

    }
    else
    {
        <div class="text-center text-light bg-secondary">
            <div id="carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    @foreach (picture picture in Model.response.pictures)
                    {
                        <div class="carousel-item @first">
                            <div class="container">
                                <div class="card border-0 bg-secondary">
                                    <div class="card-img">
                                        <img src="@picture.large" width="300" height="500" class="d-block m-auto" alt="first slide">
                                    </div>
                                    <div class="card-body w-50 m-auto">
                                        <a class="page-link bg-dark text-light" asp-page="/AnimeStuff/AnimeDetails" asp-route-Anime="@Model.Anime" alt="photo of @Model.Anime">@Model.Anime</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        first = "";
                    }
                </div>
                <button class="carousel-control-prev bg-dark h-25" type="button" data-target="#carousel" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next bg-dark h-25" type="button" data-target="#carousel" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    }

</div>
